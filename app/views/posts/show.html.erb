<p id="notice"><%= notice %></p>
<br>
<h3>Post</h3>

  <hr> 
  <% readPost(@post, current_user.id) %>
  <div class="user">
    <p><%= @post.created_at.strftime("%m/%d/%y %H:%M") %></p>
    <% if @post.anonymous %>
	    <p>Anonymous</p>
    <% else %>
	    <p><%= @post.user.email %></p>
    <%= image_for(@post.user, :medium) %>
    <% end %>

  </div>
  <div class="body">
    <h4>Title: <%= @post.title %></h4>
    <p>Body: <%= @post.body %></p>
  </div>

<%= link_to 'Reply', new_post_reply_path(@post.id) %> |
<% if @post.user != nil %>
  <% if current_user.id == @post.user.id %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
  <% end %>
<% end %>
<%= link_to 'Back', posts_path %>
<br>
<br>
<h3>Replies</h3>

  <hr> 
  <% @post.replies.each do |reply| %>
  <div class="user">
    <p><%= reply.created_at.strftime("%m/%d/%y %H:%M") %></p>
    <% if reply.anonymous %>
	    <p>Anonymous</p>
    <% else %>
	    <p><%= reply.user.email %></p>
    <%= image_for(reply.user, :medium) %>
    <% end %>

  </div>
  <div class="body">
    <h4>Title: <%= reply.title %></h4>
    <p>Body: <%= reply.body %></p>
  </div>
<%= link_to 'New Reply', new_post_reply_path(reply.post_id, reply: reply.id) %>
  <div class="replies">
    <% subReplies = getReplies(reply) %>
    <% clearVars %>
    <% subReplies.each do |subReply| %>
      <% subPost = subReply[0] %>
      <% indent = subReply[1] %>
      <div style="background-color: light-gray important!; margin-left: <%= " #{indent * 50}px" %>">
      <div class="user">
    <p><%= subPost.created_at.strftime("%m/%d/%y %H:%M") %></p>
    <% if subPost.anonymous %>
	    <p>Anonymous</p>
    <% else %>
	    <p><%= subPost.user.email %></p>
            <%= image_for(subPost.user, :medium) %>
    <% end %>
  </div>
  <div class="body">
    <h4>Title: <%= subPost.title %></h4>
    <p>Body: <%= subPost.body %></p>
  </div>
<%= link_to 'New Reply', new_post_reply_path(subPost.post_id, reply: subPost.id) %>
	</div>
    <% end %>
  </div> 
<hr> 
<% end %>
